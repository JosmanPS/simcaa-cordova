<?xml version='1.0' encoding='utf-8'?>
<widget id="com.simcaa.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SIMCAA</name>
    <description>SIMCAA</description>
    <author email="jmps2812@gmail.com" href="mailto:jmps2812@gmail.com">
        Josman Proudinat
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="https://simcaa.com" />
    <preference name="StatusBarBackgroundColor" value="#008341" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <platform name="android">
        <preference name="android-targetSdkVersion" value="31" />
        <preference name="android-minSdkVersion" value="25" />
        <allow-intent href="market:*" />
        <icon src="res/icons/android/mipmap-mdpi/ic_launcher.png" density="mdpi" />
        <icon src="res/icons/android/mipmap-hdpi/ic_launcher.png" density="hdpi" />
        <icon src="res/icons/android/mipmap-xhdpi/ic_launcher.png" density="xhdpi" />
        <icon src="res/icons/android/mipmap-xxhdpi/ic_launcher.png" density="xxhdpi" />
        <icon src="res/icons/android/mipmap-xxxhdpi/ic_launcher.png" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="res/icons/ios/180.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="res/icons/ios/60.png" width="60" height="60" />
        <icon src="res/icons/ios/120.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="res/icons/ios/76.png" width="76" height="76" />
        <icon src="res/icons/ios/152.png" width="152" height="152" />
        <!-- Spotlight Icon -->
        <icon src="res/icons/ios/40.png" width="40" height="40" />
        <icon src="res/icons/ios/80.png" width="80" height="80" />
        <!-- iOS 6.1 -->
        <!-- iPhone / iPod Touch -->
        <icon src="res/icons/ios/57.png" width="57" height="57" />
        <icon src="res/icons/ios/114.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="res/icons/ios/72.png" width="72" height="72" />
        <icon src="res/icons/ios/144.png" width="144" height="144" />
        <!-- iPad Pro -->
        <icon src="res/icons/ios/167.png" width="167" height="167" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="res/icons/ios/29.png" width="29" height="29" />
        <icon src="res/icons/ios/58.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="res/icons/ios/50.png" width="50" height="50" />
        <icon src="res/icons/ios/100.png" width="100" height="100" />
        <!-- iPad Pro -->
        <icon src="res/icons/ios/167.png" width="167" height="167" />
    </platform>
</widget>
